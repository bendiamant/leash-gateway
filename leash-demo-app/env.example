# Leash Gateway Configuration
# Copy this file to .env.local and fill in your API keys

# Gateway URLs
GATEWAY_URL=http://localhost:8080
GATEWAY_METRICS_URL=http://localhost:9091
GATEWAY_HEALTH_URL=http://localhost:8081

# API Keys (at least one required for real LLM calls)
# Get your API keys from:
# - OpenAI: https://platform.openai.com/api-keys
# - Anthropic: https://console.anthropic.com/account/keys
# - Google: https://makersuite.google.com/app/apikey

OPENAI_API_KEY=sk-your-openai-api-key-here
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here
GOOGLE_API_KEY=your-google-api-key-here

# Optional: Direct provider URLs (for testing without gateway)
# OPENAI_BASE_URL=https://api.openai.com/v1
# ANTHROPIC_BASE_URL=https://api.anthropic.com
# GOOGLE_BASE_URL=https://generativelanguage.googleapis.com

# Demo Mode (uses mock responses if gateway is not available)
DEMO_MODE=false

# App Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000
